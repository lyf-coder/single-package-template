{
  "include": ["src", "test"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "dist",
    "module": "Node16",
    "strict": true,
    "composite": true,
    "skipLibCheck": true,

    // These options are necessary so that TypeDoc can resolve references across packages
    "declaration": true,
    "declarationMap": true
  }
}
